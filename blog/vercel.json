{
    "version": 2,
    "framework": "laravel", // Example: Specify your framework if applicable
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.6.0" }
    },
    "routes": [
        {
            "src": "/api/(.*)", // Adjust as per your application's routing needs
            "dest": "/api/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1" // Serve static assets from public directory
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false", // Set to false for production
        "APP_URL": "https://yourproductionurl.com",
        "CACHE_DRIVER": "file", // Example: Adjust caching driver
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    },
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php",
            "config": {
                "buildCommand": "apt-get update && apt-get install -y libssl-dev"
            }
        }
    ],
    "outputDirectory": "public"
}
